<h1>タスク一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>名前</th>
    <th>詳細</th>
    <th>終了期限</th>
    <th>状態</th>
    <th>優先順位</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td class="task_row"><%= task.name %></td>
    <td><%= task.detail %></td>
    <td><%= task.dead_line.strftime("%Y-%m-%d") %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>

    <td><%= link_to '内容を確認する',task_path(task.id) %></td>
    <td><%= link_to "タスクを編集する", edit_task_path(task.id) %></td>
    <td><%= link_to 'タスクを削除する', task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>

<%= link_to '新しくタスクを登録する', new_task_path %>
<%= link_to '終了期限でソートする', tasks_path(sort_expired: "true") %>
