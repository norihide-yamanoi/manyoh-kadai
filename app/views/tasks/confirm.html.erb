<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @task, url: tasks_path, local: true) do |form| %>
  <%= form.hidden_field :name %>
  <%= form.hidden_field :detail %>
  <%= form.hidden_field :dead_line %>
  <%= form.hidden_field :status %>
  <%= form.hidden_field :priority %>

  <% @task.label_ids.each do |label_ids| %>
    <%= form.hidden_field :label_ids, multiple: true, value: label_ids %>
  <% end %>



  <p>名前:<%= @task.name %></p>
  <p>詳細:<%= @task.detail %></p>
  <p>終了期限:<%= @task.dead_line.strftime("%Y-%m-%d")%></p>
  <p>状態:<%= @task.status %></p>
  <p>優先順位:<%= @task.priority %></p>
  <p>ラベル:<% @task.labels.each do |label| %>
                <%= label.name %>
              <% end %></p>

  <%= form.submit  "登録する" %>

  <%= form.submit "戻る", name: 'back' %>

<% end %>
