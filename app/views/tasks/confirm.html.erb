<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @task, url: tasks_path, local: true) do |form| %>
  <%= form.hidden_field :name %>
  <%= form.hidden_field :detail %>
  <%= form.hidden_field :dead_line %>

  <p>名前:<%= @task.name %></p>
  <p>詳細:<%= @task.detail %></p>
  <p>終了期限:<%= @task.dead_line %></p>

  <%= form.submit  "登録する" %>

  <%= form.submit "戻る", name: 'back' %>

<% end %>
