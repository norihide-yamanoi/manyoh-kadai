<h1>ユーザー一覧</h1>
<p><%= notice %></p>

<%= link_to '新しくユーザーを登録する', new_admin_user_path, class:"btn btn-primary" %>

<table class="table">
  <tr>
    <th>名前</th>
    <th>email</th>
    <th>タスク数</th>
    <th>管理者権限</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.tasks.count %></td>
    <td><%= user.admin %></td>

    <td class="check"><%= link_to '確認',admin_user_path(user.id) %></td>
    <td class="edit"><%= link_to "編集", edit_admin_user_path(user.id) %></td>
    <td class="delete"><%= link_to '削除', admin_user_path(user.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>

<%= link_to "タスク一覧画面にもどる", tasks_path %>

<%= paginate @users %>
